md-content(layout='')
  toolbar
.organization-detail(layout='row')
  span(flex='')
  div(layout='column')
    h1 Here are the details of the organization
    form.md-whiteframe-z1(name='form', ng-submit='save()', layout-padding='')
      md-input-container
        label Name
        input(ng-model='organization.name', placeholder='Name')
      md-input-container
        label Address
        input(ng-model='organization.address', placeholder='Address')
      md-input-container
        label Contact
        input(ng-model='organization.contact', placeholder='Contact')
      md-input-container
        label Email
        input(ng-model='organization.email', placeholder='Email')
      div(layout='row')
        input.md-button(type='submit', value='Save')
        md-button(ng-click='reset()') Reset
        md-button(ng-href='/organizations') Cancel
  span(flex='')