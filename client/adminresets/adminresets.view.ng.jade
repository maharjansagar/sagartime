.admin-reset(layout='row')
  span(flex='')
  div(layout='column')
    h1 Here are the details of the user
    form.md-whiteframe-z1(name='form', ng-submit='showConfirm($event)', layout-padding='')
      md-input-container
        label Email
        input(ng-model='email', placeholder='Email')
      md-input-container
        label Password
        input(ng-model='newPlaintextPassword', placeholder='New Password')
      div(layout='row')
        input.md-button(type='submit', value='Save')
        md-button( ng-href='/usermanages') Cancel
    div(ng-if='status')
      br
      b.md-padding(layout='row', layout-align='center center')
        | {{status}}
  span(flex='')