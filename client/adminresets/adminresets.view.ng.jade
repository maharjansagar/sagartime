        md-toolbar.md-tall.md-hue-2
          span(flex='')
          .md-toolbar-tools-bottom.inset(layout='column')
            <i class="fa fa-user fa-4"></i>
            span
            div {{ $root.currentUser.profile[0].fname}} {{$root.currentUser.profile[0].lname}}
